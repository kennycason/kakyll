<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>{{ title }}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"></meta>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/ico" href="/assets/favicon.ico" />

    <!-- css -->
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
          crossorigin="anonymous">

    <!-- js -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>

</head>
<body>
<header>
    <div class="container">
        <div class="navbar-header">
            <a href="/index.html" class="navbar-brand">Kakyll</a>
        </div>
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
            <ul class="nav navbar-nav">
                <li><a href="/about.html">About</a></li>
                <li><a href="/tags.html">Tags</a></li>
            </ul>
        </nav>
    </div>
</header>
<div id="body" class="container">
    <div class="col-md-8">
        {{{ content }}}
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Links</h4>
            </div>
            <ul class="list-group">
                <li class="list-group-item"><a href="/about.html">About</a></li>
                <li class="list-group-item"><a href="/tags.html">Tags</a></li>
            </ul>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Tags</h4>
            </div>
            <div class="panel-body">
                <ul class="list-inline">
                    {{#each tag_cloud}}
                        <li><a href="{{ this.url }}">{{ this.tag }} ({{ this.count }})</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Latest Posts</h4>
            </div>
            <ul class="list-group">
                {{#each posts}}
                    <li class="list-group-item"><a href="{{ this.url }}">{{ this.title }} - {{ this.date }} </a></li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<footer>
    <div class="container">
        <p class="text-center">Copyright Â© Kakyll 2017. All rights reserved.</p>
    </div>
</footer>
</body>
</html>
